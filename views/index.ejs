<%- include("partials/header.ejs"); %>

<% if (locals.timeScale) { %>
    <div class="ctn <%= timeScale %>">
        <main class="app container">
            <div class="app__list row gx-3 align-items-lg-center">
                <div class="app__item item-current col-sm-12 col-md-6 col-lg-6 offset-lg-3 mt-4">
                    <div class="weather-location card">
                        <div class="weather-location__body card-body">
                            <h5 class="weather-location__name card-title">
                                <%= data.name %>
                            </h5>
                            <img src="images/<%= icon %>" class="card-img-top" alt="">
                            <p class="weather__celc my-2">
                                <%= Math.ceil(data.main.temp) %>&deg;C
                            </p>
                            <p class="weather__desc card-text">
                                <%= data.weather[0].main %>
                            </p>
                            <p class="weather__feels card-text">
                                Feels like:
                                <%= Math.ceil(data.main.feels_like) %>&deg;C
                            </p>
                            <p class="weather__temp_range card-text">
                                Min: <%= Math.ceil(data.main.temp_min) %>&deg;C -
                                Max: <%= Math.ceil(data.main.temp_max) %>&deg;C</p>
                            <p class="weather__humidity card-text">
                                Humidity: <%= data.main.humidity %> %
                            </p>
                        </div>
                    </div>
                </div>
        
                <div class="app__search col-12">
                    <form action="/find-location" method="post" class="row">
                        <div class="mb-3 col-12 col-md-6 col-lg-6 offset-lg-3">
                            <label for="exampleInputPassword1" class="form-label fs-3 fw-bold text-white">Search city: </label>
                            <input type="text" class="form-control" id="exampleInputPassword1" name="cityname">
                            <button type="submit" class="btn btn-primary w-100 mt-2">Find</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
<% } else { %>
    <main class="app container">
        <div class="app__list row gx-3 align-items-lg-center">
            <div class="app__item item-current col-sm-12 col-md-6 col-lg-6 offset-lg-3 mt-4">
                <div class="weather-location card">
                    <div class="weather-location__body card-body">
                        <h5 class="weather-location__name card-title">
                            <%= error %>
                        </h5>
                        <img src="images/sunny.png" class="card-img-top" alt="">
                        <p class="weather__celc my-2">
                            -- &deg;C
                        </p>
                        <p class="weather__desc card-text">
                            --
                        </p>
                        <p class="weather__feels card-text">
                            Feels like:
                            --&deg;C
                        </p>
                        <p class="weather__temp_range card-text">
                            Min: --&deg;C -
                            Max: --&deg;C</p>
                        <p class="weather__humidity card-text">
                            Humidity: -- %
                        </p>
                    </div>
                </div>
            </div>
    
            <div class="app__search col-12">
                <form action="/find-location" method="post" class="row">
                    <div class="mb-3 col-12 col-md-6 col-lg-6 offset-lg-3">
                        <label for="exampleInputPassword1" class="form-label fs-3 fw-bold text-white">Search city: </label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="cityname">
                        <button type="submit" class="btn btn-primary w-100 mt-2">Find</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
<% } %>


<%- include("partials/footer.ejs"); %>
